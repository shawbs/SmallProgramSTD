/* component/topnav.wxss */

topnav{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 40px;
  z-index: 5;
  box-shadow: 1px 0 5px #ccc;
  
}
.scroll-nav{
  height: 40px;
  line-height: 40px;
  font-size: 14px;
  margin-bottom: 10px;
  white-space: nowrap;
}
.flex{
  display: flex;
}
.nav-item{
  flex: 1;
  text-align: center;
  position: relative;
}
.nav-item.active{
  color: #d89f55;
}
.nav-item.active::after{
  content: "";
  width: 100%;
  bottom: 0;
  left: 0%;
  position: absolute;
  border-bottom: 3.5px solid #e5b577;
}