/* component/bottombar/bottombar.wxss */
bottom-bar{
  position: fixed;
  bottom: 0;
  left: 0;
  height: 50px;
  width: 100%;
  background: #4c4c4c;
  text-align: right;
  padding: 8px 10px;
  z-index: 1;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}

button{
  flex: 1;
  font-size: 14px;
  color: #FFFFFF;
  background: #f3a423;
  margin: 0;
}

