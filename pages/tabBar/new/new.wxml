<!--pages/tabBar/new/new.wxml-->
<view class='container new-page'>
  <!-- <topnav class="dark" bind:navitemtap="navtab"  navlist="{{navlist}}" /> -->
  <view class='card-list' wx:if="{{type==1}}">
    <view class='card' wx:for="{{list}}" wx:key="{{index}}">
      <view class='card-hd' data-url='{{item.url}}' bindtap='linkInfo'>{{item.title}}</view>
      <view class='card-bd flex' data-url='{{item.url}}' bindtap='linkInfo'>
        <image src='{{item}}' class='flex-item' mode='aspectFill' wx:for="{{item.imgs}}" wx:key="{{index}}"></image>
      </view>
      <view class='card-fd'>
        <view class='line'>
          <view class='orange2'>顺天达拍卖</view>
          <image wx:if="{{!item.praiseBefore}}" bindtap='dopraise' data-id="{{item.id}}" data-index="{{index}}" data-praise="{{item.praiseBefore}}" class='zan-icon' src='http://app.shuntd.cn/shuntd/pub/images/shipin_zan1@3x.png' mode='aspectFit'></image>
          <image wx:if="{{item.praiseBefore}}" bindtap='dopraise' data-id="{{item.id}}" data-index="{{index}}" data-praise="{{item.praiseBefore}}" class='zan-icon' src='http://app.shuntd.cn/shuntd/pub/images/shipin_zan2@3x.png' mode='aspectFit'></image>
        </view>
        <view class='line'>
          
          <text>{{item.createTime}}</text>
          <view class='pr-1'>{{item.praise}}</view>
        </view>
      </view>
    </view>
  </view>

  <view class='card-list' wx:if="{{type==2}}">
    <view class='card' wx:for="{{list}}" wx:key="{{index}}">
      <view class='video-hd' hidden="{{item.play}}">
        <text class='orange'>第{{item.indexx}}期</text>
        <view>{{item.name}}</view>
      </view>
      <view class='card-bd flex'>
        <video  id='myVideo{{index}}' data-index="{{index}}" src='{{item.videoUrl}}' style='width:100%' poster='{{item.accessories}}'></video>
        <!-- <image hidden="{{item.play}}" src='{{item.accessories}}' style='width:100%;height:225px;' mode='aspectFill' data-index="{{index}}" bindtap='playVideo'></image> -->
      </view>
      <view class='video-fd'>
        <view class='cell left' data-index="{{index}}" bindtap='linkVideoInfo'>
          <text class='label orange2'>视频简介:</text>
          <view class='desc'> {{item.introduction}}</view>
        </view>
        <view class='cell right'> 
          
          <image wx:if="{{!item.praiseBefore}}" bindtap='dopraise' data-id="{{item.id}}" data-index="{{index}}" data-praise="{{item.praiseBefore}}" class='zan-icon' src='http://app.shuntd.cn/shuntd/pub/images/shipin_zan1@3x.png' mode='aspectFit'></image>
          <image wx:if="{{item.praiseBefore}}" bindtap='dopraise' data-id="{{item.id}}" data-index="{{index}}" data-praise="{{item.praiseBefore}}" class='zan-icon' src='http://app.shuntd.cn/shuntd/pub/images/shipin_zan2@3x.png' mode='aspectFit'></image>
          <view class='pr-1'>{{item.praise}}</view>
        </view>
      </view>
    </view>
  </view>
</view>
