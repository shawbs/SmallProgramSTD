.auction-list{
  width: 100%;
}
.auction{
  background: #ffffff;
  /* margin-bottom: 5px; */
}

.auction-item{
  position: relative;
  /* margin-bottom: 5px; */
}

.auction-item .auction-cover{
  width: 100%;
}
.auction-item .auction-title{
  position: absolute;
  width: 100px;
  height: 43px;
  top: -3px;
  left: 10px;
  background: #B62C2C;
  border-top: 3px solid #E5B577;
  color: #ffffff;
  text-align: center;
  line-height: 43px;
  overflow: hidden;
  z-index: 1;
}
.auction-title.preview{
  background: rgba(142,107,82,0.6);
}
.auction-item .auction-info{
  position: absolute;
  left: 10px;
  top: 43px;
  z-index: 1;
  display: flex;
  flex-direction: column;
  line-height: 1.8em;
}
.auction-item .auction-info .text{
  font-size: 12px;
  color: #05e25e;
}
.auction-item .auction-info .start-time{
  font-size: 22px;
  color: #ffffff;
  margin-bottom: 10px;
}
.auction-item .auction-info .auction-number{
  font-size: 16px;
  color: #E5B577;
  border-top: 1px solid rgba(229,181,119,0.4);
  border-bottom: 1px solid rgba(229,181,119,0.4);
}

.title-logo{
  text-align: center;
  margin-bottom: 5px;
}
.title-logo image{
  width: 260px;
  height: 30px;
}
.good-list{
  margin-top: -5px;
  padding-top: 2%;
}