/* pages/mine/mine.wxss */
.top-bg{
  position: relative;
  height: 80px;
  background: #333;
  border-bottom: 4px solid #d89f55;
}
.avatar{
  position: absolute;
  top: 40px;
  left: 50%;
  margin-left: -40px;
}
.icon-setting{
  position: absolute;
  top: 10px;
  right: 10px;
}
.top-nav{
  background: #fff;
  display: flex;
  align-items: center;
  font-size: 14px;
  height: 100px;
  margin-bottom: 10px;
}
.top-nav .cell{
  width: 30%;
  text-align: center;
}
.top-nav .info{
  flex: 1;
  font-size: 12px;
  padding-top: 35px;
  line-height: 18px;
}
.top-nav .info text{
  margin: 0 5px;
}
.top-nav .cell .icon{
  width: 28px;
  height: 28px;
  margin-bottom: 5px;
}



.mine-card{
  position: relative;
  background: #fff;
  margin: 0 10px;
  border-radius: 4px;
  z-index: 1;
}
.mine-card .card-bd{
  display: flex;
  padding: 8px 0;
}
.mine-card .card-bd .cell{
  flex: 1;
  text-align: center;
}
.mine-card .card-fd{
  display: flex;
  align-items: center;
  justify-content: center;
  border-top: 1px solid #ddd;
  height: 50px;
  margin: 0 20px;
}
.mine-card .card-fd text{
  margin: 0 5px;
}

.other{
  background: #E5B577;
  margin-top: -50px;
  padding-top: 70px;
  padding-bottom: 66px;
}
.other ._title{
  text-align: center;
}
.other ._title::before, .other ._title::after{
  content: "";
  display: inline-block;
  height: 1px;
  width: 30%;
  margin: 0 10px;
  background: #D5A66A;
  position: relative;
  top: -3px;
}
.other .serve{
  display: flex;
  margin: 10px 20px 0;
  font-size: 12px;
}
.other .serve .cell{
  flex: 1;
  text-align: center;
}
.other .serve .img{
  width: 60px;
  height: 70px;
}
.orader-card .card-bd .cell .bage{
  right: 13px;
}