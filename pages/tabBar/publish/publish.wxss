/* pages/merchant/publish/publish.wxss */
.list-item input{
  text-align: right;
  color: gray;
}
.list{
  margin-bottom: 10px;
}
textarea{
  width: 98%;
}
.preview-img{
  padding: 10px 5px;
  display: flex;
  flex-wrap: wrap;
}
.upload-icon{
  width: 77px;
  height: 77px;
}
.tip{
  font-size: 12px;
  line-height: 28px;
  color: gray;
  padding-left: 10px;
}

.checkbox-group{
  display: flex;
  flex-wrap: wrap;
}
.checkbox-group .checkbox{
  width: 23.33%; 
  display: flex;
  align-items: center;
}
/* .checkbox-group .checkbox:first-child{
  width: 30%; 
} */
.checkbox-group .checkbox:nth-child(4n+1){
  width: 30%; 
}
.checkbox{
  position: relative;
  height: 35px;
}
.checkbox checkbox{
  position: absolute;
  top: -6px;
  left: 5px;
  z-index: 1;
  opacity: 0;    
}
.checkbox-icon{
  width: 30px;
  height: 30px;
}
button{
  border-radius: 0; 
}


.hint{
  padding-top: 30px;
  padding-bottom: 30px;
}

.preview-img .img{
  width: 77px;
  height: 77px;
  border-radius: 4px;
  background: #000;
}
.preview-img .img-item{
  margin-right: 8px;
  margin-bottom: 8px;
  position: relative;
}
.delete-icon{
  position: absolute;
  top: -5px;
  right: -5px;
  z-index: 1;
}