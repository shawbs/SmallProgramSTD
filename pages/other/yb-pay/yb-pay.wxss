/* pages/yb-pay.wxss */
.yb-pay-body{
    background: #f3f3f3;
}
.top{
    width: 100%;
    height: 150px;
    background: #1f1c1a;
    padding-top: 50px;
    position: relative;
    border-bottom: 4px solid #e5b577;
}
.yb-pay-page .tip{
    width: 56%;
    height: 80px;
    border: 3px solid #e5b577;
    margin-left: 22%;
    color: #e4b476;
}
.yb-pay-page .tip .text{position: relative;margin-top: 20px;text-align: center;font-size: 16px}
.yb-pay-page .tip .text:after, .yb-pay-page .tip .text:before {
    background: rgba(229,181,119,0.38);
    content: "";
    height: 1.5px;
    position: absolute;
    top: 50%;
    width: 20%;
}
.yb-pay-page .tip .text:before {
    left: 0;
}

.yb-pay-page .tip .text:after {
    right: 0;
}
.yb-pay-page .tip .point{
    margin-top: 5px;
    color: #e36334;
    font-size: 25px;
    line-height: 25px;
    font-weight: bold;
    text-align: center;
}
.yb-pay-page .person-point{
    color: #999;
    position: absolute;
    right: 10px;
    bottom: 8px;
}
.yb-pay-page .person-point label{
    color: #c88920;
}
.yb-pay-btn{
    color: #ffffff;
    background: #d89f55;
    width: 92%;
    margin: 20px auto;
    height: 42px;
    line-height: 42px;
    text-align: center;
    border-radius: 4px;
}