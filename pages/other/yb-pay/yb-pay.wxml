<view class="yb-pay-page container" wx:if="{{pay}}">
    <view class='top'>
      <view class="tip">
          <view class="text">支付积分</view>
          <view class="point">{{entrys.amountToPay}}</view>
      </view>
      <!-- <view class="person-point">您当前拥有娱乐积分：<label>10,000</label></view> -->
    </view>
    
    <view class="yb-pay-btn" bindtap='postIntegralPay'>确认支付</view>
</view>
