page{
  background:  #1F1C1A;
}
.chunk-item{
  height: 100vh;
  box-sizing: border-box;
}
.link-history{
  /* position: absolute;
  top: 10px;
  right: 10px;
  z-index: 1; */
  float: right;
  font-size: 16px;
  /* padding: 10px; */
  color: #333;
}
.chunk{
  margin: 20px 10px 30px;
  box-sizing: border-box;
  height: 91%;
  border-radius: 10px;
  background: #fff;
  overflow: auto;
  font-size: 14px;
}
.chunk .chunk-hd{
  padding: 10px;
  background: #654D38;
  color: #DAC3A5;
  height: 70px;
}
.chunk .chunk-hd ._title{
  font-size: 18px;
  color: #fff;
  margin-bottom: 10px;
}
.chunk .chunk-bd {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.chunk .chunk-bd .form{
  padding: 0 10px;
  overflow: auto;
  flex: 1;
}
.chunk .chunk-bd .btn-orange{
  margin: 10px;
}
.chunk .input-group{
  border-bottom: 1px solid #ddd;
  padding: 10px 0; 
}
.chunk .input-group input{
  color: #333;
  font-size: 16px;
}
.chunk .label{
  line-height: 30px;
  color: #666;
  padding: 10px 0;
}
.chunk .preview-img{
  display: flex;
  flex-wrap: wrap;
}
.chunk .preview-img{
  margin-right: -8px;
  margin-bottom: 20px;
  min-height: 185px;
}
.chunk .preview-img .img{
  width: 77px;
  height: 77px;
  border-radius: 4px;
  background: #000;
}
.chunk .preview-img .img-item{
  margin-right: 8px;
  margin-bottom: 8px;
  position: relative;
}
.delete-icon{
  position: absolute;
  top: -5px;
  right: -5px;
  z-index: 1;
}

.upload-icon{
  width: 80px;
  height: 80px;
}
.chunk{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.sifa.chunk .chunk-hd{
  background: #913216;
  height: 92px;
}
.b{
  font-size: 16px;
  line-height: 30px;
}
.sifa.chunk .chunk-bd .content{
  line-height: 22px;
  padding: 10px;
  overflow: auto;
  flex: 1;
}
.sifa.chunk .chunk-bd .btn-green{
  margin: 10px;
}
.mask{
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
}
.mask .box{
  border-radius: 10px;
  background: #666; 
}