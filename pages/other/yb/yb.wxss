/* pages/yb/yb.wxss */
.yb-page{
  background: #D89F55;
}
.top-bg{
  width: 100%;
}
.fixed-btn{
    position: fixed; 
    top:20%;
    width: 20px;
    background: #8c6a51;
    z-index: 9;
    color: #ffffff;
    text-align: center;
    font-size: 14px;
    padding: 15px 2px;
    white-space:pre-wrap;
    opacity: .85;
}
.yb-page .prev{
    left: 0;
    border-radius: 0 4px 4px 0;
}
.yb-page .next{
    right: 0;
    border-radius: 4px 0 0 4px;
}
.yb-page .top-logo{
  height: 30px;
  width: 100%;
  margin-bottom: 5px;
}
.yb-page .current-yb{
    margin: -150px 10px 0;
    padding: 0 10px 10px;
    background: #ffffff;
    box-shadow: 0 0 3px #222222;
    border-radius: 8px 8px 12px 12px;
}
.yb-page .yb-title{
  font-size: 18px;
  line-height: 2;
  color: #333;
}
.yb-page .current-yb .desc{
    padding: 10px 8px;
    color: #9B9B9B;
    font-size: 14px;
    line-height: 20px;
    border-bottom: 1px solid #E9E9E9;
    margin-bottom: 10px;
}
.yb-page .current-yb .desc span{
  color: #222222;
}
.yb-page .current-yb .desc .row{
  justify-content: space-between;
  line-height: 2;
}
.yb-page .current-yb .desc .content{
    color:#222222;
    line-height: 1.5em;
}
.yb-page .ruler{
    margin: 10px 20px;
    padding-bottom: 60px;
}
.yb-page .ruler .title{
    font-size: 16px;
    color: #FFFFFF;
    padding: 10px 0;
    border-bottom: 1px solid rgba(244,209,165,0.55);
}
.yb-page .ruler .content{
  font-size: 12px;
  line-height: 1.5em;
  color: #ffffff;
}
.yb-progress{
  width: auto;
  padding: 0;
}
