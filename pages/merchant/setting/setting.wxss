/* pages/merchant/setting/setting.wxss */
.address-item2{
  border-top: 3px solid #d89f55;
}
.mask{
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 10;
  background: #f3f3f3;
}
.mask .box{
  padding: 10px;
}
.input-control{
  font-size: 14px;
  border: 1px solid #ddd;
  border-radius: 5px;
  background: #fff;
  margin-bottom: 10px;
  padding: 8px 8px;
}
.mask .flex{
  padding: 0 10px;
}
.flex .btn,.flex button{
  flex: 1;
}
.btn{
  margin-right: 0;
}
textarea{
  font-size: 14px;
  border: 1px solid #ddd;
  border-radius: 5px;
  background: #fff;
  margin-bottom: 10px;
  padding: 8px 8px;
  width: 95%;
}