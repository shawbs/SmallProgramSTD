/* pages/merchant/message/message.wxss */

.msg-list{
  margin-bottom: 10px;
  padding-left: 10px;
}
.box{
  position: relative;
}
.msg-item{
  position: relative;
  padding-left: 60px;
  padding-top: 10px;
  padding-bottom: 10px;
  border-bottom: 1px solid #ddd;
}
.avatar-icon{
  position: absolute;
  left: 0;
  top: 10px;
  width: 50px;
  height: 50px;
  border-radius: 4px;
}
.msg-title{
  display: flex;
  justify-content: space-between;
  line-height: 25px;
  /* margin-bottom: 3px; */
  padding-right: 10px;
  font-size: 16px;
}
.msg-content{
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  margin-bottom: 5px;
}
.bage{
  position: absolute;
  top: 5px;
  left: 45px;
  border-radius: 50%;
  background: #f00;
  color: #fff;
  font-size: 12px;
  padding: 0px 3px;
  z-index: 1;
  font-family: Cambria, Cochin, Georgia, Times, Times New Roman, serif;
}