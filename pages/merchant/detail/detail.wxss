/* pages/detail/detail.wxss */
.container{
  padding-bottom: 60px; 
}
.top-info{
  border-top: 4px solid #E5B577;
  font-size: 14px;
  padding: 8px;
  background: #ffffff;
  position: relative;
}
.top-info .text{
  color: #9B9B9B;
  font-size: 12px;
}
.top-info .title{
  line-height: 2em;
  margin-top: 5px;
}

.top-info .price{
  position: absolute;
  right: 10px;
  top: 20px;
  color: #E86433;
  font-size: 20px;
  padding-left: 10px;  
  border-left: 1px solid #f2f2f2;
}

.tip{
  text-align: center;
  font-size: 12px;
  color: #9B9B9B;
  height: 40px;
  line-height: 40px;
}

.tabbar{
  background: #8E6B52;
  height: 48px;
  line-height: 48px;
  padding: 0 10px;
}
.tabbar>view{
  width: 30%;
  text-align: center;
  color: #ffffff;
  font-size: 16px;
}
.tabbar .active{
  border-bottom: 3px solid #E5B577;
}

.tab-item{
  display: none;
  margin: 10px;
  background: #ffffff;
  color: #9B9B9B;
  font-size: 14px;
  line-height: 2em;
  box-sizing: border-box;
  padding: 0 10px;
}
.tab-item.active{
  display: block;
}
.tab-item .flex{
  border-bottom: 1px solid #f3f3f3; 
  padding: 8px 0;
}
.tab-item .left{
  width: 30%;
}
.tab-item .right{
  text-align: right;
  width: 70%;
}
.extrafee .left{
  width: 70%;
}
.extrafee .right{
  width: 30%;
}
.tab-item .desc{
  padding: 8px 0;
  text-indent: 20px;
}
.top-price{
  background-color: #ffffff;
  border-top: 1px solid #e8e8e8;
  border-bottom: 1px solid #e8e8e8;
  padding: 20px 0;
  color: #333;
}
.top-price .flex-item:first-of-type{
  border-right: 1px solid #e8e8e8;
}

.top-price .flex-item text{
  line-height: 30px;
  font-size: 14px;
  color: #666;
}

.top-price .flex-item .price{
  font-size: 18px;
}
.other-info{
  display: flex;
  justify-content: space-between;
  font-size: 13px;
  color: #9B9B9B;
  padding: 10px 7px;
  border-bottom: 1px solid #e8e8e8; 
  background: #ffffff;
}
.user-img{
    padding: 10px;
    border-bottom: 1px solid #e8e8e8;
    background: #ffffff;
}
.user-img .aj-views{
    display: flex;
    flex-wrap: wrap;
}
.user-img .aj-views>view{
  margin-right: 5px;
}
.user-img image{
    width: 38px;
    height: 38px;
}
button.dark{
  background: #6f645e;
}
.d-status{
  display: flex;
  font-size: 12px;
  height: 40px;
  line-height: 40px;
  padding-left: 40px;
  background: url(http://app.shuntd.cn/shuntd/pub/images/icon_chuizi%20copy@3x.png) 10px center no-repeat;
  background-size: 20px 20px;
  align-items: center;
}
.arrow-icon{
  width: 40px;
  height: 22px;
}
.status-0{
  background-color: rgba(0,0,0,.8);
  color: #ccc;
}
.status-1{
  background-color: #780018;
  color: #fff;
}
.bid-list{
  background: #fff;
  color: #666;
}
.bid-list .bid-list-title{
  padding: 10px 0px 10px 10px;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #ddd;
}
.bid-list .avatar-icon{
  border-radius: 4px;
  width: 50px;
  height: 50px;
  position: absolute;
  top: 10px;
  left: 0px;
  z-index: 1;
}
.bid-list .bid-item{
  position: relative;
  margin-left: 10px;
  padding-left: 60px;
  padding-top: 10px;
  padding-bottom: 10px;
  margin-right: 10px;
  font-size: 12px;
  border-bottom: 1px solid #f3f3f3;
  line-height: 25px;
}
.bid-list .bid-item .flex{
  justify-content: space-between;
  align-items: center;
}
.state-icon{
  width: 45px;
  height: 25px;
}