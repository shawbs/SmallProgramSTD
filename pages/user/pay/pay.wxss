/* pages/user/upgrade-post/upgrade-post.wxss */
.top{
    width: 100%;
    height: 120px;
    background: #1f1c1a;
    padding-top: 50px;
    position: relative;
    border-bottom: 4px solid #e5b577;
}
.tip{
    width: 56%;
    height: 80px;
    border: 3px solid #e5b577;
    margin-left: 22%;
    color: #e4b476;
}
.upgrade-post-page .tip .text{position: relative;margin-top: 20px;text-align: center;font-size: 16px}
.upgrade-post-page .tip .text:after, .upgrade-post-page .tip .text:before {
    background: rgba(229,181,119,0.38);
    content: "";
    height: 1.5px;
    position: absolute;
    top: 50%;
    width: 20%;
}
.upgrade-post-page .tip .text:before {
    left: 0;
}

.upgrade-post-page .tip .text:after {
    right: 0;
}
.upgrade-post-page .tip .point{
    margin-top: 5px;
    color: #e36334;
    font-size: 25px;
    line-height: 25px;
    font-weight: bold;
    text-align: center;
}
.upgrade-post-page .person-point{
    color: #999;
    position: absolute;
    right: 10px;
    bottom: 8px;
}
.upgrade-post-page .person-point label{
    color: #c88920;
}
.btn-orange{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  margin: 0;
  border-radius: 0; 
}
.play-list{
  background: #fff;
  margin-bottom: 10px;
  font-size: 16px;
}
.play-list .list-title{
  line-height: 40px;
  padding: 0 10px;
  border: 1px solid #ddd;
  color: #666;
}
.play-list .list-item{
  position: relative;
  margin-left: 50px;
  padding-top: 10px;
  padding-bottom: 10px;
  padding-right: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ddd;
}
.play-list .list-item:last-of-type{
  border-bottom: none;
}
.play-list .list-item .label-icon{
  position: absolute;
  width: 30px;
  height: 40px;
  left: -40px;
  top: 10px;
}
.play-list .list-item  .label text{
  color: #666;
  font-size: 12px;
}
.radio{
  position: relative;
}
.radio radio{
   position: absolute;
   opacity: 0; 
}
.radio image{
  width: 30px;
  height: 30px;
}
