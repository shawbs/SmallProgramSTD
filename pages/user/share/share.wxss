/* pages/user/share/share.wxss */
page{
  background: #fff;
  height: 100%;
}
.top{
  position: relative;
  padding-top: 25px;
  height: 220px;
  text-align: center;
}
.top .bg{
  position: absolute;
  top: -1px;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.canvas-box{
  text-align: center;
}
.qrcode{
  width: 130px;
  height: 130px;
  border: 2.5px solid #f2a318;
  padding: 10px;
  background: #fff;
  border-radius: 4px;
}
.share-btn{
  position: absolute;
  top: 10px;
  left: 10px;
  z-index: 1;
  font-size: 16px;
  color: #666;
  border: none;
  background: none;
}
.top-titile{
  font-size: 22px;
  color: #D89F55;
  line-height: 30px;
  margin-bottom: 20px;
}
.middle-content{
  padding: 0 10px;
}
.middle-content .tip{
  margin-top: -2px;
  background: url(http://app.shuntd.cn/shuntd/pub/images/ma_icon_biaoti_@2x.png)no-repeat center;
  background-size: 120% 38px;
  height: 38px;
  line-height: 35px;
  font-size: 14px;
  text-align: center;
  color: #fff;
  margin-bottom: 20px;
}
.middle-content .card{
  border: 1px solid #D89F55;
  border-radius: 5px;
  font-size: 14px;
  color: rgba(58,56,56,0.90);
  padding: 15px;
  position: relative;
  margin-bottom: 20px;
}
.middle-content .card.orange{
  border: 1px solid #E86433;
  border-radius: 5px;
  font-size: 14px;
  color: rgba(58,56,56,0.90);
  padding: 15px;
  position: relative;
  margin-bottom: 20px;
}
.middle-content .card.orange .card-title{
  color: #E86433;
}
.card .card-title{
    position: absolute;
    padding: 0 8px;
    top: -9px;
    left: 10px;
    background: #ffffff;
    font-size: 16px;
    color: #D89F55;
}
.mine-share-page .rem-opt{
    text-align: center;
    margin-bottom: 20px;
}
.mine-share-page .rem-btn{
    display: inline-block;
    border: 1px solid #D89F55;
    background: #fff;
    border-radius: 30px;
    padding: 10px 10px;
    padding-left: 20px;
    font-size: 15px;
    color: #000;
    margin-bottom: 10px;
}
.mine-share-page .rem-btn.orange{
    background: #d99f55;
}
