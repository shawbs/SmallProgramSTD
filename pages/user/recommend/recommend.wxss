/* pages/user/recommend/recommend.wxss */
page{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.top-nav{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 5;
}
.scroll-nav{
  height: 40px;
  margin-bottom: 10px;
}
.scroll-nav ._nav{
  background: #fff;
}
.icon-star{
  height: 28px;
  padding: 5px 0;
}
.icon-star.on{
  border-bottom: 2px solid #d89f55; 
}
.top-card{
  margin-bottom: 10px;
  background: #fff;
}
.top-card .flex-item{
  line-height: 40px;
  font-size: 14px;
  color: #666;
}
.top-card .text-num{
  color: #333;
  font-weight: 800;
}
.top-title{
  display: flex;
  justify-content: space-between;
  padding: 0 10px;
  line-height: 50px;
  background: #fff;
  color: #666;
  border-bottom: 1px solid #ccc;
  margin-bottom: 10px;
}
._list .list-item{
  background: #fff;
  padding: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #666;
  line-height: 22px;
  border-bottom: 1px solid #ccc;
}
.inviter.active .recommend-detail-page{
  height: auto;
  /* animation: slideDown .5s forwards; */
}
.inviter.active .icon-arrow-r{
  transform: rotate(90deg)
}
.recommend-detail-page{
  background: #fff;
  height: 0;
  overflow: hidden;
  font-size: 12px;
  /* animation: slideUp .5s forwards; */
}
.recommend-detail-page ._line{
  border-bottom: 1px solid #ccc;
  line-height: 30px;
  padding: 10px;
  color: #666;
}
.table .th,.table .td{
  display: flex;
  margin-left: 10px;
  border-bottom: 1px solid #ccc; 
}
.table .td:last-of-type{
  border-bottom: none;
}
.table .th>view,.table .td>view{
  flex: 1;
  text-align: center;
  line-height: 50px;
  color: #666;
}
@keyframes slideUp{
  form {
    height: auto
  }
  to {
    height: 0
  }
}

@keyframes slideDown{
  form {
    height: 0
  }
  to {
    height: auto
  }
}