<!--pages/order-confirm/order-confirm.wxml-->
<view class="store-confirm">
    <view class='lotto-confirm' wx:if="{{confirmType==2 && lotto}}">
        <view class="order-item">
            <view class="order-item-bd">
                <image class='img' src="{{lotto.imgUrl[0]}}"></image>
                <view class="show-text">
                  <view class="title ellipsis2">{{lotto.itemName}}</view>
                  <view>本次摇宝 {{lotto.price}}积分/摇奖号</view>
                  <view class="black">剩余{{lotto.surplusNum}}份</view>
                </view>
            </view>

        </view>
        <view class='form' >
          <view class='form-control'>
            <label>购买数量</label>
            <view>
              <text class="fr">份</text>  
              <input value='{{defaultVal}}' type='number' bindinput="changNum"/>
            </view>
          </view>
        </view>

        <view class="max-bottom-bar">
            <view class="fl">
                <view class="point-tip">费用合计:</view>
                <view class="point"><label class="zf-point">{{total||defaultVal*lotto.price}}</label>积分</view>
            </view>
            <view class="confirm-btn" bindtap='postLottoOrader' data-id="{{lotto.lottoId}}">提交订单</view>
        </view>
    </view>

    <view class='confirm' wx:if="{{confirmType==1 && info && address}}">
        <view class="order-item" data-orderid="3">
            <view class="order-item-bd">
                <image class='img' src="{{info.imgUrl[0]}}"></image>
                <view class="show-text">
                  <view class="title ellipsis2">{{info.name}}</view>
                  <view class="residue">{{info.integralNum}}积分</view>
                </view>
            </view>

        </view>
        <view class="logistics">
            <view class="logistics-title">选择物流</view>
            <view class="logistics-bd">

                <view class="logistics-pic">
                  <image mode='widthFix' src='/assets/image/dingdan_icon_shunfeng@3x.png'></image>
                </view>
                <view class="logistics-info">
                    <view class="logistics-info-title">
                        快递
                        <i class="radio-icon on fr"></i>
                    </view>
                    <view class="logistics-info-content clearfix">
                        <view class="address">
                            <label>收货地址</label>
                            {{address.province}}{{address.city}}{{address.area}}{{address.street}}
                        </view>
                        <navigator url='/pages/user/address/address' class="btn1 btn-orange1 setAddressLink fr">设置地址</navigator>
                    </view>
                </view>
            </view>
        </view>

        <view class="max-bottom-bar">
            <view class="fl">
                <view class="point-tip">费用合计:</view>
                <view class="point"><label class="zf-point">{{info.integralNum}}</label>积分</view>
            </view>
            <view class="confirm-btn" bindtap='postStoreOrader' data-id="{{info.treasureId}}" data-token="{{info.treasureItemToken}}" data-atoken="{{address.addressToken}}">提交订单</view>
        </view>
    </view>
    

    
    

    

</view>

