/* pages/user/refund/refund.wxss */
page{
  padding-bottom: 50px;
}
.top{
  height: 60px;
  line-height: 50px;
  font-size: 16px;
  color: #d89f55;
  text-align: center;
  background: #333;
}
.form{
  padding: 20px 15px;
}
.form ._title{
  color: #ccc;
  line-height: 25px;
  margin-bottom: 20px;
}
.form textarea{
  width: 100%;
  height: 150px;
  margin-bottom: 10px;
}
.form-card{
  border-top: 3px solid #d89f55;
  background: #fff;
  padding: 20px 15px;
  box-shadow: 0 5px 20px rgba(216,159,85,.2);
}
.preview-img{
  display: flex;
  flex-wrap: wrap;
}
.preview-img image{
  width: 77px;
  height: 77px;
  border-radius: 4px;
}
.preview-img .img-item{
  margin-right: 8px;
  margin-bottom: 8px;
  position: relative;
}
.delete-icon{
  position: absolute;
  top: -5px;
  right: -5px;
  z-index: 1;
}

.max-bottom-bar{
    background: #D89F55;
    text-align: center;
}

.max-bottom-bar button{
    color: #FFFFFF;
    font-size: 16px;
    line-height: 40px;
    background: transparent;
}