/* pages/user/login.wxss */
.top-pic{
    height: 230px;
    width: 100%;
    text-align: center;
    position: relative;
    border-bottom: 4px solid #e5b577;
}
.top-pic .top-pic-bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1; 
}
.top-pic .top-pic-logo{
    padding-top: 70px;
    width: 90px;
    height: 90px;
}

.top-pic .login-tip{
    position: absolute;
    text-align: center;
    left: 0;
    bottom: 12px;
    width: 100%;
    color: #e5b577;
}
.top-pic .login-tip label{
    position: relative;
    padding-bottom: 3px;
    margin: 0 15%;
}
.top-pic .login-tip label.active:after{
    position: absolute;
    bottom: -3px;
    left: 50%;
    margin-left: -7px;
    height: 4px;
    width: 14px;
    content: '';
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
    background-color: #e5b577;
}

.login-content .input-phone-tip{
    margin-top: 30px;
    text-align: center;
    font-size: 17px;
}
.login-content .input-control{
    padding-top: 30px;
}
.input-control input{
    flex: 1;
    margin: 0 auto;
    border: none;
    border-bottom: 1px solid #888;
    padding: 10px 0;
    font-size: 15px;
    outline: none;
}
.input-control input:focus{
    border-bottom: 1px solid #e76434;
}
.login-btn-wp{
    text-align: center;
    margin-top: 30px;
}
.login-btn{
    
    background: #e5b577;
    color: #ffffff;
    border: 0;
    height: 46px;
    border-radius: 5px;
    font-size: 18px;
}
button:active,button:focus{
    border: 0;
    outline: none;
}
.login-noc{
    margin: 10px auto;
    line-height: 26px;
    position: relative;
}
.login-noc a{
    color: #e45520;
    font-size: 12px;
}
.login-bottom{
  position: absolute;
  bottom: 30px;
  left: 0;
  right: 0;
  margin-bottom: 5px;
  text-align: center;
}
.login-bottom .black{
    color: #888;
    font-size: 14px;
}
.login-bottom .gray{
    color: #c7c7cc;
    font-size: 12px;
    margin-top: 2px;
}

.content-val .desc-text{
    
    margin: 0 auto;
    margin-top: 40px;
    margin-bottom: 30px;
    font-size: 15px;
    padding-bottom: 15px;
}
.content-val .desc-text .phone-text{
    float: left;
    color: #9a9a9a;
}
.content-val .desc-text .count-down{
    float: right;
    color: #e45520;
}
.content-val .input-wp{
    
    margin: 30px auto;
}
.content-val .input-wp .flex-item{
  text-align: center;
}
.content-val .input-wp input{
    display: inline-block;
    height: 60px;
    text-align: center;
    font-size: 22px;
    border-bottom: 1px solid #666;
}
.content-val .input-wp input:focus{
    border-bottom: 1px solid #e76434;
}

.checkbox{
    opacity: 0;
    width: 20px;
    height: 20px;
    position: absolute;
    z-index: 1;
    top: 4px;
}
.checkbox.checked + label {
    display: inline-block;
    height: 20px;
    width: 20px;
    background: url("https://app.shuntd.cn/shuntd/pub/images/icon_gou3%20@2x.png")no-repeat center;
    background-size: 120%;
    position: relative;
    z-index: 0;
    top: 4px;
}
.checkbox + label {
    display: inline-block;
    height: 20px;
    width: 20px;
    background-image: url("http://app.shuntd.cn/shuntd/pub/images/icon_gou4@2x.png");
    background-size: 120%;
    position: relative;
    z-index: 0;
    top: 4px;
}
.content-val,.content-tel{
  padding-left: 8%;
  padding-right: 8%;
}
.reg-content{
  padding-top: 10px;
}
.input-control{
  display: flex;
  padding-top: 5px;
  align-items: center;
}
.btn-code{
  background: #e5b577;
  color: #fff;
  padding: 5px 8px;
  border-radius: 4px;
  line-height: 2;
  font-size: 12px;
  width: 120px;
}
.btn-code[disabled]{
  background: rgba(0,0,0,.3);
  color: #666;
}